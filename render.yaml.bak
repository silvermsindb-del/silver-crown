services:
  - type: web
    name: my-cms
    env: node
    repo: https://github.com/silvermsindb-del/silver-crown.git
    branch: main
    rootDir: my-cms
    buildCommand: npm install && npm run build
    startCommand: npm run start
    plan: free
    envVars:
      - key: DATABASE_URI
        sync: false
      - key: PAYLOAD_SECRET
        sync: false
      - key: CLOUDINARY_CLOUD_NAME
        sync: false
      - key: CLOUDINARY_API_KEY
        sync: false
      - key: CLOUDINARY_API_SECRET
        sync: false
      - key: PAYLOAD_PUBLIC_SERVER_URL
        fromService:
          type: web
          name: my-cms
          property: url

staticSites:
  - name: jewelry-store
    repo: https://github.com/silvermsindb-del/silver-crown.git
    branch: main
    rootDir: jewelry-store
    buildCommand: npm install && npm run build
    publishDir: dist
    envVars:
      - key: VITE_API_URL
        fromService:
          type: web
          name: my-cms
          property: url
